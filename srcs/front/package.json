{
	"name": "front-service",
	"version": "1.0.0",
	"description": "Front part of the website",
	"private": "true",
	"scripts": {
		"build": "npm run build:js && npm run build:css",
		"build:js": "esbuild scripts/main.ts --bundle --platform=browser --outfile=dist/main.js --loader:.html=text",
		"build:css": "tailwindcss -i ./styles/input.css -o ./dist/style.css",
		"watch:js": "esbuild scripts/main.ts --bundle --platform=browser --outfile=dist/main.js --watch --loader:.html=text",
		"watch:css": "tailwindcss -i ./styles/input.css -o ./dist/style.css --watch",
		"check-types": "tsc"
	},
	"watch": {
		"build:js": {
			"patterns": [
				"srcs/front/scripts"
			],
			"extensions": "ts"
		},
		"build:css": {
			"patterns": [
				"srcs/front/scripts",
				"srcs/front"
			],
			"extensions": "ts,html"
		}
	},
	"devDependencies": {
		"@types/node": "24.10.0",
		"esbuild": "^0.25.12",
		"npm-watch": "^0.11.0",
		"tailwindcss": "^3.4.0",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"socket.io-client": "^4.8.1"
	}
}
