{
	"name": "front-service",
	"version": "1.0.0",
	"description": "Front part of the website",
	"private": "true",
	"scripts": {
		"build": "tsc && tailwindcss -i ./styles/input.css -o ./dist/style.css --minify",
		"watch": "tsc --watch & tailwindcss -i ./styles/input.css -o ./dist/style.css --watch",
		"build:css": "tailwindcss -i ./styles/input.css -o ./dist/style.css --minify",
		"watch:css": "tailwindcss -i ./styles/input.css -o ./dist/style.css --watch"
	},
	"devDependencies": {
		"@types/node": "24.10.0",
		"esbuild": "^0.25.12",
		"npm-watch": "^0.11.0",
		"tailwindcss": "^3.4.18",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"socket.io-client": "^4.8.1"
	}
}
